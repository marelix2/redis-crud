<h1>Add User</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/ticket/add">
  <div class="form-group">
    <label>ID</label>
    <input type="text" name="id" class="form-control" placeholder="podaj ID">
  </div>
  <div class="form-group">
    <label>Imie</label>
    <input type="text" name="firstName" class="form-control" placeholder="Podaj Imie">
  </div>
  <div class="form-group">
    <label>Nazwisko</label>
    <input type="text" name="lastName" class="form-control" placeholder="Podaj Nazwisko">
  </div>
  <div class="form-group">
    <label>Nazwa Pociągu</label>
    <input type="text" name="trainName" class="form-control" placeholder="Podaj nazwę pociągu">
  </div>
  <div class="form-group">
    <label>Rodzaj Biletu</label>
    <input type="text" name="ticketType" class="form-control" placeholder="Podaj rodzaj biletu">
  </div>
  <input type="submit" class="btn btn-primary" value="Zapisz">
</form>
