<h1>Add User</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/ticket/update/{{ticket.id}}">
  <div class="form-group">
    <label>ID: {{ticket.id}} </label>
  </div>
  <div class="form-group">
    <label>Imie</label>
    <input type="text" name="firstName" class="form-control" placeholder="Podaj Imie" value={{ticket.firstName}}>
  </div>
  <div class="form-group">
    <label>Nazwisko</label>
    <input type="text" name="lastName" class="form-control" placeholder="Podaj Nazwisko" value={{ticket.lastName}}>
  </div>
  <div class="form-group">
    <label>Nazwa Pociągu</label>
    <input type="text" name="trainName" class="form-control" placeholder="Podaj nazwę pociągu" value={{ticket.trainName}}>
  </div>
  <div class="form-group">
    <label>Rodzaj Biletu</label>
    <input type="text" name="ticketType" class="form-control" placeholder="Podaj rodzaj biletu" value={{ticket.ticketType}}>
  </div>
  <input type="submit" class="btn btn-primary" value="Zapisz">
</form>
